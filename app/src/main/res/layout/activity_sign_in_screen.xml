<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".authentication.SignInScreen">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/desat_blue"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/stroked"
        android:gravity="center_vertical"
        android:hint="Email"
        android:paddingLeft="23dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/desat_blue"
        android:textColorHint="#5F729E"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/stroked"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="23dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/desat_blue"
        android:textColorHint="#5F729E"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/email_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_login"
        app:layout_constraintTop_toBottomOf="@+id/email_login" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:buttonTint="@color/desat_blue"
                android:text="Remember me"
                android:textColor="@color/desat_blue" />

            <TextView
                android:id="@+id/forgetpass"
                android:layout_width="139dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/desat_blue"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/checkBox" />

        </RelativeLayout>



    </LinearLayout>




    <Button
        android:id="@+id/login"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/buttons"
        android:layout_marginTop="30dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/forgetpass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/password_login" />

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/next"
        app:layout_constraintStart_toStartOf="@+id/next"
        app:layout_constraintTop_toBottomOf="@+id/next"
        app:layout_constraintVertical_bias="0.545">

        <TextView
            android:id="@+id/mess"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Don't have an account?"
            android:textColor="@color/desat_blue" />

        <TextView
            android:id="@+id/noacc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Create one"
            android:textColor="@color/desat_blue"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>